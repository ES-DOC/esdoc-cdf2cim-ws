# Set home path
export CDF2CIM_WS_HOME="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Extend python path.
export PYTHONPATH=$PYTHONPATH:$CDF2CIM_WS_HOME

# Ensure shell scripts are executable.
chmod a+x $CDF2CIM_WS_HOME/sh/*.sh

# Web-service commands.
alias cdf2cim-ws=$CDF2CIM_WS_HOME/sh/ws_run.sh
alias cdf2cim-ws-daemon-init=$CDF2CIM_WS_HOME/sh/web_daemon_init.sh
alias cdf2cim-ws-daemon-kill=$CDF2CIM_WS_HOME/sh/web_daemon_kill.sh
alias cdf2cim-ws-daemon-reload='cdf2cim-ws-daemon-kill && cdf2cim-ws-daemon-init'
alias cdf2cim-ws-daemon-status=$CDF2CIM_WS_HOME/sh/web_daemon_status.sh
alias cdf2cim-ws-logs-reset=$CDF2CIM_WS_HOME/sh/web_logs_reset.sh

# Testing commands.
alias cdf2cim-ws-tests=$CDF2CIM_WS_HOME/sh/run_tests.sh

# Config commands.
alias cdf2cim-ws-config-init=$CDF2CIM_WS_HOME/sh/config_init.sh
alias cdf2cim-ws-config-update=$CDF2CIM_WS_HOME/sh/config_update.sh

# Virtual environment commands.
alias cdf2cim-ws-venv-init=$CDF2CIM_WS_HOME/sh/venv_init.sh
alias cdf2cim-ws-venv-upgrade=$CDF2CIM_WS_HOME/sh/venv_upgrade.sh
